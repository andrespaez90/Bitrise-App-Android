<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextMicro">
        <item name="android:textSize">@dimen/font_caption2</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">@dimen/font_caption1</item>
    </style>

    <style name="TextNormal">
        <item name="android:textSize">@dimen/font_body</item>
    </style>

    <style name="TextBig">
        <item name="android:textSize">@dimen/font_subtitle</item>
    </style>

    <style name="TextHuge">
        <item name="android:textSize">@dimen/font_h1</item>
    </style>

    <style name="TextMicro.White" parent="TextMicro">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextSmall.White" parent="TextSmall">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextNormal.White" parent="TextNormal">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextBig.White" parent="TextBig">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextHuge.White" parent="TextHuge">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextHuge.White.Bold" parent="TextHuge.White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall.Gray" parent="TextSmall">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="TextNormal.Gray" parent="TextNormal">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="TextSmall.Black" parent="TextSmall">
        <item name="android:textColor">@color/font_black</item>
    </style>

    <style name="TextNormal.Black" parent="TextNormal">
        <item name="android:textColor">@color/font_black</item>
    </style>

    <style name="TextBig.Black" parent="TextBig">
        <item name="android:textColor">@color/font_black</item>
    </style>

    <style name="TextHuge.Black" parent="TextHuge">
        <item name="android:textColor">@color/font_black</item>
    </style>

    <style name="TextHuge.Blue" parent="TextHuge">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextSmall.Blue.Light" parent="TextSmall">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextNormal.White.Bold" parent="TextNormal.White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBig.White.Bold" parent="TextBig.White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall.Black.Bold" parent="TextSmall.Black">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNormal.Black.Bold" parent="TextNormal.Black">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBig.Black.Bold" parent="TextBig.Black">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHuge.Black.Bold" parent="TextHuge.Black">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHuge.Blue.Bold" parent="TextHuge.Blue">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall.Gray.Bold" parent="TextSmall.Gray">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Primary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/selector_background_button</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:radius">@dimen/radius_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_body</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Button.Cancel" parent="Button.Primary">
        <item name="android:background">@color/red_abort</item>
    </style>

    <style name="Button.Cancel.Small" parent="Button.Cancel">
        <item name="android:textSize">@dimen/font_caption2</item>
        <item name="android:paddingTop">@dimen/spacing_micro</item>
        <item name="android:paddingBottom">@dimen/spacing_micro</item>
        <item name="android:minHeight">@dimen/spacing_empty</item>
    </style>


    <style name="App.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textSize">@dimen/font_body</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>